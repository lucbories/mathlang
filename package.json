{
  "name": "mathlang",
  "version": "1.0.0",
  "description": "test math vm",
  "main": "dest/mathlang.js",
  "dependencies": {
    "@types/node": "^11.12.1",
    "big-integer": "^1.6.43",
    "chevrotain": "^4.3.1",
    "decimal.js": "^10.1.1",
    "systemjs": "^3.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/sinon": "^7.0.10",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "ts-node": "^8.0.3",
    "typescript": "^3.4.1"
  },
  "scripts": {
    "test":              "mocha --reporter spec --require ts-node/register src/**/*.test.ts",
    "test-compiler":     "mocha --reporter spec --require ts-node/register src/tests/integration/compiler.test.ts",
    "test-compiler-all": "mocha --reporter spec --require ts-node/register src/tests/unit/compiler/**/*.test.ts",
    "test-ast":          "mocha --reporter spec --require ts-node/register src/tests/unit/compiler/2-ast-builder/math_lang_parser_*.test.ts",
    "test-ast-1":        "mocha --reporter spec --require ts-node/register src/tests/unit/compiler/2-ast-builder/math_lang_parser_1_*.test.ts",
    "test-ast-2":        "mocha --reporter spec --require ts-node/register src/tests/unit/compiler/2-ast-builder/math_lang_parser_2_*.test.ts",
    "test-ast-3":        "mocha --reporter spec --require ts-node/register src/tests/unit/compiler/2-ast-builder/math_lang_parser_3_*.test.ts",
    "test-ast-4":        "mocha --reporter spec --require ts-node/register src/tests/unit/compiler/2-ast-builder/math_lang_parser_4_*.test.ts",
    "test-ast-number":   "mocha --reporter spec --require ts-node/register src/tests/unit/compiler/2-ast-builder/math_lang_parser_1_number.test.ts",
    "test-ast-id-left":  "mocha --reporter spec --require ts-node/register src/tests/unit/compiler/2-ast-builder/math_lang_parser_1_id_left.test.ts",
    "test-ast-id-right": "mocha --reporter spec --require ts-node/register src/tests/unit/compiler/2-ast-builder/math_lang_parser_1_id_right.test.ts",
    "test-ast-call":     "mocha --reporter spec --require ts-node/register src/tests/unit/compiler/2-ast-builder/math_lang_parser_2_call.test.ts",
    "test-ast-mathexpr": "mocha --reporter spec --require ts-node/register src/tests/unit/compiler/2-ast-builder/math_lang_parser_2_math_expr.test.ts",
    "test-ast-if":       "mocha --reporter spec --require ts-node/register src/tests/unit/compiler/2-ast-builder/math_lang_parser_3_if.test.ts",
    "test-ast-switch":   "mocha --reporter spec --require ts-node/register src/tests/unit/compiler/2-ast-builder/math_lang_parser_3_switch.test.ts",
    "test-ast-assign":   "mocha --reporter spec --require ts-node/register src/tests/unit/compiler/2-ast-builder/math_lang_parser_3_assign.test.ts",
    "test-ast-function": "mocha --reporter spec --require ts-node/register src/tests/unit/compiler/2-ast-builder/math_lang_parser_4_function.test.ts",
    "test-ic":           "mocha --reporter spec --require ts-node/register src/tests/unit/compiler/3-ic-builder/math_lang_ic_*.test.ts",
    "test-ic-assign":    "mocha --reporter spec --require ts-node/register src/tests/unit/compiler/3-ic-builder/math_lang_ic_assign.test.ts",
    "test-ic-if":        "mocha --reporter spec --require ts-node/register src/tests/unit/compiler/3-ic-builder/math_lang_ic_if.test.ts",
    "test-ic-switch":    "mocha --reporter spec --require ts-node/register src/tests/unit/compiler/3-ic-builder/math_lang_ic_switch.test.ts",
    "testjs":            "mocha  dest/tests/unit/**/*.test.js",
    "watch-test":        "mocha --reporter spec --require ts-node/register --watch --watch-extensions ts src/**/*.test.ts"
  },
  "author": "",
  "license": "MIT"
}
